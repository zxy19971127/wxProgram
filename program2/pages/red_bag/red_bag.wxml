<!--pages/red_bag/red_bag.wxml-->
<scroll-view scroll-y class="scroll" style="height:{{height}}px" bindscroll="scrollEvent">
  <view class="circle_outter">
    <view class="circle_inner">
      <view class="circle" style="height:{{radius*2*2}}rpx; width:{{radius*2*2}}rpx; left:{{left*2}}rpx;"></view>
    </view>
    <view class="user_group">
      <image src="/icon/hosico.jpg" class="hosico"></image>
      <view class="username">鱼头泡饼的红包</view>
    </view>
  </view>
  <view class="placeholder"></view>
</scroll-view>
