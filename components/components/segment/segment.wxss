/* components/segment/segment.wxss */
.segment_group{
  width: 100%
}

.segment_header{
  width: 100%;
  height: 50rpx;
  border: 1px solid #e4e4e4;
  display: flex;
  justify-content: start;
}

.segment_item{
  flex: 1;
  border-right: 1px solid #e4e4e4;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.segment_item:last-of-type{
  border:none;
}

.segment_header .active{
  background: #1aad16;
  color:#fff;
}

.segment_page{
  width: 100%;
  height: 800rpx;
}